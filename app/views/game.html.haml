%html.mdl-js{:lang => "en"}
  %head
    = Haml::Engine.new(File.read('./app/views/partials/_head.html.haml')).render(Object.new, GameService::head)
  %body
    %section#introduction
      .container
        .row.fill-viewport.align-items-center.justify-content-center
          .col-12.col-md-6
            .row
              .col-md-auto
                %h1.text-white.title= title
            .row
              %p.lead.text-white-70
                Hello HARDCODED!
                = short_rules
                = secret_number
            %hr.mb-4/
            .row
              .col.button
                %button.btn.btn-primary{:type => "button", :disabled => "disabled"}
                  = level_label
                  %span.badge.badge-light= level
              .col.text-center.button
                %button.btn.btn-primary{:type => "button", :disabled => "disabled"}
                  = attempts_label
                  %span.badge.badge-light= attempts
              .col.button
                %button.btn.btn-primary.float-right{:type => "button"}
                  = hints_label
                  %span.badge.badge-light= hints
            %hr.mb-4/

            %form{:method => "post", :action => "#{UrlGeneratorService::generate_url('submit_answer')}"}
              .form-group
                %input.form-control.guess_input{:name => "number", :pattern => "^[1-6]{4}$", :placeholder => "1234", :required => "", :autocomplete => "off"}/
              .form-group.guess_markers_list
                #guess_marker
                  - markers.each do |marker|
                    - if '+' == marker
                      %button.btn.btn-success.marks{:type => "button", :disabled => "disabled"}= marker
                    - elsif '-' == marker
                      %button.btn.btn-primary.marks{:type => "button", :disabled => "disabled"}= marker
              %hr.mb-4/

              %button.btn.btn-primary.btn-lg{:type => "submit"}= submit_button
              %a.btn.btn-warning.btn-lg.float-right{:href => "#{UrlGeneratorService::generate_url('hint')}", :role => "button", :disabled => (hints == 0 ? "disabled" : nil)}
                = show_hint_label
                - show_hint.each do |hint|
                  %span.badge.badge-light= hint

            %hr.mb-4/
            - history.each do |item|
              .row
                .col.button
                  %button.btn.btn-warning{:type => "button", :disabled => "disabled"}
                    #{item[:number]}
                - item[:match].each do |marker|
                  - if '+' == marker
                    %button.btn.btn-success.marks{:type => "button", :disabled => "disabled"}= marker
                  - elsif '-' == marker
                    %button.btn.btn-primary.marks{:type => "button", :disabled => "disabled"}= marker